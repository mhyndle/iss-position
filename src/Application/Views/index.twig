{% extends 'layout.twig' %}

{% block content %}

    <h1>International Space Station Position</h1>

    <div class="row">
        <div class="col col-sm-12 col-md-4">
            <p>Latitude: {{issLocation.getLatitude()}}</p>
            <p>Longitude: {{issLocation.getLongitude()}}</p>
            <p>Location name: {{issLocation.getLocationName()}}</p>
        </div>
        <div class="col col-sm-12 col-md-8">
            <div id="map" style="width: 100%; height: 400px;"
                 data-latitude="{{issLocation.getLatitude()}}"
                 data-longitude="{{issLocation.getLongitude()}}">
            </div>
        </div>
    </div>

    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCy__iHTWt0k8zv6G-LuGv8QUS87jOhm6k&callback=initMap">
    </script>

{% endblock %}
